{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.wled.slideeffect",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "YAWSEE"
  },
  "description": {
    "en": "Yet Another WLED Slide & Exit Effect — sliding on/off animations for WLED LED strips."
  },
  "tags": {
    "en": [
      "wled",
      "led",
      "esp32",
      "neopixel",
      "addressable"
    ]
  },
  "category": "lights",
  "brandColor": "#4A90D9",
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Mr-V34",
    "email": "info@v34.com"
  },
  "bugs": {
    "url": "https://github.com/Mr-V34/homey-wled-yawsee/issues"
  },
  "source": "https://github.com/Mr-V34/homey-wled-yawsee",
  "flow": {
    "triggers": [
      {
        "id": "slide_completed",
        "title": {
          "en": "Sliding effect finished"
        },
        "hint": {
          "en": "Fires when a slide animation completes on this device."
        },
        "tokens": [
          {
            "name": "direction",
            "type": "string",
            "title": {
              "en": "Direction (on / off)"
            },
            "example": "on"
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=wled_strip"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "slide_on",
        "title": {
          "en": "Slide ON"
        },
        "hint": {
          "en": "LEDs fill one by one from start to end, then hold."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=wled_strip"
          }
        ]
      },
      {
        "id": "slide_off",
        "title": {
          "en": "Slide OFF"
        },
        "hint": {
          "en": "LEDs clear one by one from end to start, then power off."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=wled_strip"
          }
        ]
      },
      {
        "id": "set_slide_speed",
        "title": {
          "en": "Set slide speed"
        },
        "titleFormatted": {
          "en": "Set slide speed to [[speed]] ms per LED"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=wled_strip"
          },
          {
            "name": "speed",
            "type": "number",
            "title": {
              "en": "Speed (ms per LED)"
            },
            "min": 10,
            "max": 500,
            "step": 10
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "WLED Strip"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode"
      ],
      "capabilitiesOptions": {
        "dim": {
          "title": {
            "en": "Brightness"
          }
        },
        "light_temperature": {
          "title": {
            "en": "Warm / Cool"
          }
        }
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "discovery": "wled",
      "pair": [
        {
          "id": "list_devices",
          "title": {
            "en": "Select WLED Device"
          }
        },
        {
          "id": "manual_entry",
          "title": {
            "en": "Enter IP Address"
          }
        }
      ],
      "images": {
        "small": "/drivers/wled_strip/assets/images/small.png",
        "large": "/drivers/wled_strip/assets/images/large.png",
        "xlarge": "/drivers/wled_strip/assets/images/xlarge.png"
      },
      "id": "wled_strip",
      "settings": [
        {
          "id": "num_leds",
          "type": "number",
          "label": {
            "en": "Number of LEDs"
          },
          "value": 20,
          "min": 1,
          "max": 1024,
          "hint": {
            "en": "Must match your physical LED count."
          }
        },
        {
          "id": "slide_speed_ms",
          "type": "number",
          "label": {
            "en": "Slide speed (ms per LED)"
          },
          "value": 50,
          "min": 10,
          "max": 500,
          "hint": {
            "en": "50 ms × 20 LEDs = 1 second total animation."
          }
        },
        {
          "id": "firmware",
          "type": "label",
          "label": {
            "en": "WLED Firmware"
          },
          "value": "Unknown"
        },
        {
          "id": "ip_address",
          "type": "label",
          "label": {
            "en": "IP Address"
          },
          "value": "Unknown"
        }
      ]
    }
  ],
  "discovery": {
    "wled": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "_wled",
        "protocol": "tcp"
      },
      "id": "{{txt.mac}}"
    }
  }
}